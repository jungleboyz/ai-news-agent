# ===========================================
# AI News Agent - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Required API Keys
# ===========================================

# OpenAI API key for embeddings
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API key for Claude (summaries, clustering labels)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL connection URL (for production)
# Leave unset to use SQLite for local development
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# ===========================================
# Redis Configuration (Optional)
# ===========================================

# Redis URL for Celery background jobs
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# Email Configuration (Optional)
# ===========================================

# SMTP settings for email delivery
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=your-email@gmail.com

# ===========================================
# Application Settings
# ===========================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Secret key for session encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-in-production

# Allowed hosts (comma-separated for production)
# ALLOWED_HOSTS=ripin.ai,www.ripin.ai

# ===========================================
# Feature Flags
# ===========================================

# Enable semantic scoring with embeddings
USE_SEMANTIC_SCORING=true

# Enable topic clustering
USE_TOPIC_CLUSTERING=true

# Enable personalization
USE_PERSONALIZATION=true
